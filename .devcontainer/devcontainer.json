{
  "name": "Hugo Codespace",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu",

  "features": {},

  "postCreateCommand": "bash .devcontainer/setup.sh",

  "forwardPorts": [1313],

  "portsAttributes": {
    "1313": {
      "label": "Hugo",
      "onAutoForward": "openBrowser"
    }
  },

  "customizations": {
    "vscode": {
      "extensions": [
        "budparr.language-hugo-vscode"
      ],
      "settings": {
        "task.allowAutomaticTasks": "on"
      }
    }
  }
}
